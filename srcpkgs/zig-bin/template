pkgname=zig-bin
version=0.14.1
revision=1
archs="x86_64"
wrksrc="zig-x86_64-linux-${version}"
hostmakedepends="unzip"
skiprdeps=yes

short_desc="Zig programming language (binary build, overrides zig)"
maintainer="Your Name <you@example.com>"
license="MIT"
homepage="https://ziglang.org"
distfiles="https://ziglang.org/download/${version}/zig-x86_64-linux-${version}.tar.xz"
